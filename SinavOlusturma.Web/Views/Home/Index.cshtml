@model IEnumerable<SinavOlusturma.Data.Exam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Sınav Oluştur", "Index", "Exam", null, new { @class = "btn btn-primary float-right " })
        @Html.ActionLink("Çıkış", "LogOut", "Landing", null, new { @class = "btn btn-danger float-right" })
    </div>
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1; }
                @foreach (var exam in Model)
                {
                    
                        <tr>
                            <th scope="row">@i</th>
                            <td><a href="@Url.Action("Exam", "Exam", new { examID = exam.Id})" class="btn-sm">@exam.Title</a></td>
                            <td><a href="@Url.Action("Exam", "Exam", new { examID = exam.Id})" class="btn-sm">@exam.Date.Value.ToShortDateString()</a></td>
                            <td><a href="@Url.Action("DeleteExam", "Home", new { examID = exam.Id})" class="btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                        </tr>
                    
                    i++;
                }
            </tbody>
        </table>
        <p>Not: Başlığa ya da tarihe tıklayarak sınava girebilirsiniz.</p>
    </div>
</div>

